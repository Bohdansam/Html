<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kozr"
                android:layout_marginTop="11dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32dp"
                android:fontFamily="@font/mplcbold"
                android:textColor="@color/white"
                android:layout_marginTop="-1dp"
                app:layout_constraintTop_toTopOf="@+id/rectangle"
                app:layout_constraintRight_toRightOf="@+id/rectangle"
                app:layout_constraintLeft_toLeftOf="@+id/rectangle"/>

            <ImageView
                android:id="@+id/codeSym"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/rectangle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/comp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter1Btn"
                android:layout_width="310dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/codeSym"
                app:layout_constraintBottom_toBottomOf="@id/codeSym"
                app:layout_constraintStart_toEndOf="@id/codeSym"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/chapter1"
                android:background="@color/efef"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="-10dp"/>

            <ImageView
                android:id="@+id/textSmv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/codeSym"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/write"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter2Btn"
                android:layout_width="310dp"
                android:layout_height="65dp"
                app:layout_constraintTop_toTopOf="@id/textSmv"
                app:layout_constraintBottom_toBottomOf="@id/textSmv"
                app:layout_constraintStart_toEndOf="@id/textSmv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/chapter2"
                android:background="@color/efef"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="-10dp"/>

            <ImageView
                android:id="@+id/imagetSmv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/textSmv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/image"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter3Btn"
                android:layout_width="310dp"
                android:layout_height="65dp"
                app:layout_constraintTop_toTopOf="@id/imagetSmv"
                app:layout_constraintBottom_toBottomOf="@id/imagetSmv"
                app:layout_constraintStart_toEndOf="@id/imagetSmv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/chapter3"
                android:background="@color/efef"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="-10dp"/>

            <ImageView
                android:id="@+id/tableSmv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/imagetSmv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/dock"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter4Btn"
                android:layout_width="310dp"
                android:layout_height="65dp"
                app:layout_constraintTop_toTopOf="@id/tableSmv"
                app:layout_constraintBottom_toBottomOf="@id/tableSmv"
                app:layout_constraintStart_toEndOf="@id/tableSmv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/chapter4"
                android:background="@color/efef"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="-10dp"/>


            <ImageView
                android:id="@+id/interactionSmv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/tableSmv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/change"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter5Btn"
                android:layout_width="310dp"
                android:layout_height="65dp"
                app:layout_constraintTop_toTopOf="@id/interactionSmv"
                app:layout_constraintBottom_toBottomOf="@id/interactionSmv"
                app:layout_constraintStart_toEndOf="@id/interactionSmv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/chapter5"
                android:background="@color/efef"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="-10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>